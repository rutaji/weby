@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Oběšenec</title>
</head>
<body>
    @for (int y = 1; y != Model.dice.pocetpismen; y++)
    {
        if (Model.dice.uhodnute[y] != null)
        {
            <span>@Model.dice.uhodnute[y]</span>
        }
        else
        {
            <span>-</span>
        }
    }
    <p></p>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.pismeno"></label>
            <input asp-for="Input.pismeno" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary my-1">Submit</button>
    </form>
    <p></p>

    
</body>
</html>
